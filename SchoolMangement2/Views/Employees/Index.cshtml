@model IEnumerable<SchoolMangement2.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Employee details</h4>

<div class="container">
    <div class="row justify-content-right mt-2 text-right">
        <div class="col-md-12">
            @{
                DateTime tt = DateTime.Now;

                if (tt.Hour >= 12)
                {
                    <strong style="font-size: 30px; color:indianred ; font-family: Arial, sans-serif;">Good Afternoon</strong>
                }
                else if (tt.Hour < 12)
                {
                    @:Good Morning
                }
                else
                {
                    @:Good Evening
                }
            }
        </div>
    </div>
</div>





<p>
    <div class="container">
        <div class="row justify-content-end mt-3">
            <div class="col-md-6 text-right">
                <a asp-action="MasterView" class="btn btn-primary">Create New</a>
            </div>
        </div>
    </div>

</p>
<div class="container">
    <div class="row justify-content-start mt-3">
        <div class="col-md-6">
            <form asp-action="Index" asp-controller="Employees" method="get" class="d-flex flex-wrap align-items-start">
                <div class="d-flex flex-wrap align-items-start">
                    <!-- Enclosing div for flex layout -->
                    <div class="form-group d-flex align-items-center me-3 mb-0">
                        <label for="minSalary" class="me-2">Salary:</label>
                        <select name="minSalary" id="minSalary" class="form-control mb-2">
                            <option value="">---Select Salary---</option>
                            <option value="50000">50000</option>
                            <option value="60000">60000</option>
                            <option value="70000">70000</option>
                            <option value="80000">80000</option>
                        </select>
                    </div>


                    <div class="form-group d-flex align-items-center me-3 mb-0">
                        <label for="gender" class="me-2 align-self-center">Gender:</label>
                        <select name="gender" id="gender" class="form-control mb-2">
                            <option value="">---Select Gender---</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                </div> <!-- Closing div for flex layout -->
                <!-- Button inside the same div as select tags -->
                <button type="submit" class="btn btn-primary mb-2">Sort</button>
            </form>
        </div>
    </div>
</div>



