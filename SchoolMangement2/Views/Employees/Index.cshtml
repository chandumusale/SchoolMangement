<div class="table">
    <table id="myTable" class="table table-success table-striped table-sm">
        <thead>
            <tr>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                
                
               
                <th>
                    Gender 
                </th>
                <th>
                    Salary
                </th>
                
                <th>
                    AddressLine
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    PinCode
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => employee.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.LastName)
                    </td>
                   
                   
                    
                    <td>
                        @Html.DisplayFor(modelItem => employee.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => employee.Salary)
                    </td>
                    
                    <td>
                        @foreach (var address in employee.AddressList)
                        {
                            <div>
                                @Html.DisplayFor(modelItem => address.AddressLine)
                            </div>
                        }
                    </td>
                    <td>
                        @foreach (var address in employee.AddressList)
                        {
                            <div>
                                @Html.DisplayFor(modelItem => address.City)
                            </div>
                        }
                    </td>
                    <td>
                        @foreach (var address in employee.AddressList)
                        {
                            <div>
                                @Html.DisplayFor(modelItem => address.State)
                            </div>
                        }
                    </td>
                    <td>
                        @foreach (var address in employee.AddressList)
                        {
                            <div>
                                @Html.DisplayFor(modelItem => address.PinCode)
                            </div>
                        }
                    </td>
                    <td style="display: flex; gap: 3px;">
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@employee.EmployeeId">Edit</a>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id="@employee.EmployeeId">Details</a>
                        <a asp-action="Delete" class="btn btn-primary" asp-route-id="@employee.EmployeeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
