@{
    var message = TempData["SuccessMessage"] as string;
}
@if (!string.IsNullOrEmpty(message))
{
    <div class="success-message">@message</div>
}
<a asp-action="Index">Back to Form</a>

<style>
    .success-message {
        background-color: #d4edda;
        color: #155724;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #c3e6cb;
        border-radius: 5px;
    }
</style>



